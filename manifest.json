{
	"name": "IG Video Controls",
	"short_name": "igvidcontrol",
	"version": "1.0",
	"manifest_version": 2,
	"description": "Playback position and volume level controls for Instagram videos",
	"homepage_url": "https://github.com/docgunthrop/igvideocontrol",
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"permissions": ["activeTab"],
	"browser_action": {
		"default_icon": {
			"16": "icons/icon16.png",
			"32": "icons/icon32.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		},
		"default_title": "IG Video Controls"
	},
	"content_scripts": [{
		"matches": ["*://*.instagram.com/*"],
		"run_at": "document_idle",
		"css": ["content.css"],
		"js": ["content.js"]
	}],
	"web_accessible_resources": ["content.css"]
}